{% extends 'base.jinja' %}
{% block content %}

<h1> {{animal.name}} </h1>
<ul>
<li>Species: {{animal.species}}</li>
<li>Date of Birth: {{animal.dob}}</li>
<li>Owner phone no.: {{animal.phone}}</li>
<li>Vet: <a href="/vets/{{vet.id}}">{{vet.name}}</a></li>
<li>Notes: {{animal.notes}}</li>
</ul>
<button class="button">
    <a class="button" href="/animals/{{animal.id}}/edit">Update</a>
</button>
<form action="/animals/{{animal.id}}" method="POST">
    <label for="delete"></label>
    <input class="button" type="submit" id="delete" value="Delete"/>
</form>

{% endblock content %}